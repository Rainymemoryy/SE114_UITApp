<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:orientation="vertical"

    android:background="@drawable/bg_home_hienthingay"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/clock_1"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_monthi_thoigian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ailerons_typeface"
            android:layout_margin="10dp"
            android:text="07h30"

            android:textSize="30sp"

            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <TextView
            android:id="@+id/tv_monthi_mamonthi"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:fontFamily="@font/ailerons_typeface"
            android:text="SS0003.L16"
            android:textSize="20sp"
            android:textStyle="bold"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_monthi_thoigian"
            app:layout_constraintTop_toTopOf="@+id/tv_monthi_thoigian" />

        <TextView
            android:id="@+id/tv_monthi_phongthi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/ailerons_typeface"
            android:text="C3.18"
            android:textAlignment="center"
            android:textSize="16sp"


            app:layout_constraintEnd_toEndOf="@+id/tv_monthi_mamonthi"
            app:layout_constraintStart_toStartOf="@+id/tv_monthi_mamonthi"
            app:layout_constraintTop_toBottomOf="@+id/tv_monthi_mamonthi" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>